<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activities.CongratsActivity">


    <ImageView
        android:id="@+id/successed_level"
        android:layout_width="@dimen/successlevel_width"
        android:layout_height="@dimen/successlevel_height"
        android:layout_marginBottom="264dp"
        android:background="@android:color/transparent"
        android:contentDescription="TODO"
        android:scaleType="fitCenter"

        android:src="@drawable/successlevel"
        app:layout_constraintBottom_toTopOf="@+id/nextlevel_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:text="18"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/successed_level"
        app:layout_constraintEnd_toEndOf="@+id/successed_level"
        app:layout_constraintStart_toStartOf="@+id/successed_level"
        app:layout_constraintTop_toTopOf="@+id/successed_level"
        app:layout_constraintVertical_bias="0.712" />

    <ImageButton
        android:id="@+id/nextlevel_button"
        android:layout_width="@dimen/button_nextlevel_width"
        android:layout_height="@dimen/button_nextlevel_height"
        android:layout_marginBottom="104dp"
        android:background="@android:color/transparent"
        android:src="@drawable/rectanglenextlevel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/nextlevel_value"
        android:layout_width="172dp"
        android:layout_height="49dp"
        android:text="LEVEL 2"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/nextlevel_button"
        app:layout_constraintEnd_toEndOf="@+id/nextlevel_button"
        app:layout_constraintStart_toStartOf="@+id/nextlevel_button"
        app:layout_constraintTop_toTopOf="@+id/nextlevel_button" />

    <TextView
        android:id="@+id/gratulacija"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GRATULACIJA!"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/successed_level"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/addedCoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="34dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.277"
        app:layout_constraintStart_toEndOf="@+id/successed_level"
        app:layout_constraintTop_toBottomOf="@+id/gratulacija"
        app:layout_constraintVertical_bias="0.041"
        app:srcCompat="@drawable/addedcoins" />

    <GridView
        android:id="@+id/gridView_Translations"
        android:layout_width="356dp"
        android:layout_height="235dp"
        android:gravity="center"
        android:numColumns="2"
        app:layout_constraintBottom_toTopOf="@+id/nextlevel_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/successed_level" />

</androidx.constraintlayout.widget.ConstraintLayout>